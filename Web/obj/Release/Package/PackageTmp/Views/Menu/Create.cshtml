@model Web.Models.MenuViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Yeni Menü Oluştur</h3>
            <h3 class="box-title">@Html.ValidationSummary()</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Html.LabelFor(x => x.Name) (*)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Name" placeholder="Menünün Adını Giriniz">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">@Html.LabelFor(x => x.Icon) (*)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Icon" placeholder="Menü İkonu Giriniz">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">@Html.LabelFor(x => x.Controller) (*)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Controller" placeholder="Kontrolcü Adı Giriniz">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">@Html.LabelFor(x => x.Action) (*)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Action" placeholder="Aksiyon Adı Giriniz">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">@Html.LabelFor(x => x.Rank) (*)</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" name="Rank" placeholder="Görüntüleme Sırası Giriniz">
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a href="/Menu/Index" class="btn btn-primary">Vazgeç</a>
                    <button type="submit" class="btn btn-success pull-right">Ekle</button>
                </div>
            </div>
        }
    </div>
</div>

