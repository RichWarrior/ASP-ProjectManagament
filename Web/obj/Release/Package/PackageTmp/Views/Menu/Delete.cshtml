@model Web.Models.MenuViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Menuyu Silmek İstediğinize Emin Misiniz?</h3>
            <h3 class="box-title">@Html.ValidationSummary()</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Html.LabelFor(x => x.Name)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Name" id="Name" value="@Html.ValueFor(x=>x.Name)" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">@Html.LabelFor(x => x.Controller)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Controller" id="Controller" value="@Html.ValueFor(x=>x.Controller)" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">@Html.LabelFor(x => x.Action)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Action" id="Action" value="@Html.ValueFor(x=>x.Action)" disabled>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a href="/Menu/Index" class="btn btn-primary">Vazgeç</a>
                    <button type="submit" class="btn btn-danger pull-right">Sil</button>
                </div>
            </div>
        }
    </div>
</div>

