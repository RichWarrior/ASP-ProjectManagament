@model IEnumerable<Web.Models.MenuViewModel>
@{
    ViewBag.Title = "Point";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div id="modalDiv" class="box">
                <div class="box-header">
                    <h3 class="box-title">Erişim Noktaları</h3>
                </div>                
                <div class="box">
                    <div class="box-header col-sm-3">
                        @Html.ValidationSummary()
                    </div>
                </div>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Name)</th>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Icon)</th>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Controller)</th>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Action)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="container">
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Name</td>
                                <td><i class="@item.Icon"></i></td>
                                <td>@item.Controller</td>
                                <td>@item.Action</td>
                                <td>
                                    <a href="/Protection/Delete?id=@ViewBag.Id&locationId=@item.Id" class="btn btn-primary">
                                        <i class="fas fa-trash-alt">
                                            Sil
                                        </i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Name)</th>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Icon)</th>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Controller)</th>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Action)</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

