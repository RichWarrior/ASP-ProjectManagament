@model Web.Models.UsersViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Kullanıcıyı Silmek İstediğinize Emin Misiniz?</h3>
            <h3 class="box-title">@Html.ValidationSummary()</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Html.LabelFor(x => x.email)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@Html.ValueFor(x=>x.email)" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">@Html.LabelFor(x => x.role)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@Html.ValueFor(x=>x.role)" disabled>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a href="/Users/Index" class="btn btn-primary">Vazgeç</a>
                    <button type="submit" class="btn btn-warning pull-right">Sil</button>
                </div>
            </div>
        }
    </div>
</div>