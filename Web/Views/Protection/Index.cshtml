@model IEnumerable<Web.Models.RoleViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div id="modalDiv" class="box">
                <div class="box-header">
                    <h3 class="box-title">Erişim Noktaları</h3>
                </div>
                <div class="box-header col-sm-3">
                    <a href="/Protection/Create" class="btn btn-primary">
                        <i class="fas fa-plus">
                            Erişim Noktası Tanımla
                        </i>
                    </a>
                </div>
                <div class="box">
                    <div class="box-header col-sm-3">
                        @Html.ValidationSummary()
                    </div>
                </div>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Name)</th>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().MenuCount)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="container">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.MenuCount</td>
                                    <td>
                                        <a href="/Protection/Point?id=@item.Id" class="btn btn-primary">
                                            <i class="fas fa-ellipsis-h">
                                                Erişim Noktaları
                                            </i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().Name)</th>
                                <th>@Html.LabelFor(x => x.FirstOrDefault().MenuCount)</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


